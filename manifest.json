{
  "manifest_version": 3,
  "name": "TeX for Gmail",
  "version": "1.1.0",
  "version_name": "1.1-beta",
  "description": "Render LaTeX equations in Gmail compose windows. Note: Sends LaTeX to external API for rendering.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["*://mail.google.com/*"],
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": false
  },
  "icons": {
    "128": "assets/icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ]
}